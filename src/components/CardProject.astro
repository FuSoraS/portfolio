---
const {image, linkWeb, linkRepo } = Astro.props;
---
<article class="ar-main">
    <img class="ar-main-cover" src={image} alt="porjectos">
    <slot />
    <a href={linkWeb} class="ar-a first-button" rel="noreferrer noopener" target="_blank">Sitio web</a>
    <a href={linkRepo} class="ar-a second-button" rel="noreferrer noopener" target="_blank">CÃ³digo</a>
</article>

<style>
    .ar-main {
        border: 2px solid light-dark(#333,#fff);
        border-radius: 15px;
        width: 100%;
        height: fit-content;
        overflow: hidden;
    }

    .ar-main-cover {
        height: 200px;
        width: 100%;
        margin: auto;
        object-fit: cover;
    }
    .ar-a {
        display: inline-block;
        background-color: light-dark(#237746,#2FA35F);
        text-decoration: none;
        color: light-dark(#fff,#fff);
        font-weight: bold;
        padding: 10px 15px;
        box-sizing: border-box;
        margin-right: 10px;
        margin-bottom: 20px;

        transition: background-color .3s;
    }
    .first-button:hover {
        background-color: light-dark(#43c278ad,#2fa35fad);
    }
    .first-button {
        border-radius: 10px;
        margin-left: 20px;
    }
    .second-button {
        color: light-dark(#333,#fff);
        background-color: initial;
    }
</style>