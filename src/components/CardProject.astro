---
const {image, imageL1, imageL2, title, content, linkWeb, linkRepo } = Astro.props;
---
<article class="container-main">
    <img class="cover" src={image} alt="porjectos">
    {imageL1 && <img class="icon-languages first-icon" src={imageL1} alt="">}
    {imageL2 && <img class="icon-languages" src={imageL2} alt="">}
    <h3>{title}</h3>
    <p>{content}</p>
    <a href={linkWeb} class="" rel="noreferrer noopener" target="_blank">Sitio web</a>
    <a href={linkRepo} class="" rel="noreferrer noopener" target="_blank">CÃ³digo</a>
</article>
<style>
    .container-main {
        border: 2px solid #fff;
        border-radius: 15px;
        min-height: 420px;
    }
    .cover {
        width: 100%;
        height: 200px;
        border-radius: 16px 16px 0 0;
        margin: auto;
    }
    .icon-languages {
        display: inline-flex;
        justify-content: center;

        height: 25px;
        width: fit-content;
        margin: 20px 0 0 5px;
    }
    .first-icon {
        margin-left: 20px;
    }

    h3 {
        font-size: 26px;
        margin-top: 10px;
        text-align: center;
        color: #91E891;
        font-weight: bold;
    }
    a {
        background-color: #2FA35F;
        margin: 0 10px 10px 10px;
        color: #fff;
        border-radius: 10px;
        padding: 5px 10px;
    }
    a:hover {
        background-color: #2fa35fad;
    }
    a:first-of-type {
        margin-left: 20px;
    }
    p {
        text-align: center;
        margin-bottom: 20px;
    }
</style