---
const {image, linkWeb } = Astro.props;
---
<article class="ar-main">
    <img class="ar-main-cover" src={image} alt="porjectos">
    <slot />
    <a href={linkWeb} class="ar-a" rel="noreferrer noopener" target="_blank">Demo</a>
</article>

<style>
    .ar-main {
        border: 2px solid light-dark(#333,#fff);
        border-radius: 15px;
        width: 100%;
        height: fit-content;
        overflow: hidden;
    }

    .ar-main-cover {
        height: 200px;
        width: 100%;
        margin: auto;
        object-fit: cover;
    }
    .ar-a {
        display: flex;


        background-color: light-dark(#a1249b,#a1249b);
        text-decoration: none;
        color: light-dark(#fff,#fff);
        border-radius: 10px;
        font-weight: bold;
        padding: 10px 15px;
        box-sizing: border-box;

        transition: background-color .3s;
        margin: 20px 10px;
    }
    .ar-a:hover {
        /* background-color: light-dark(#43c278ad,#2fa35fad); */
    }
    .second-button {
        color: light-dark(#333,#fff);
        background-color: initial;
        border-right: 2px solid #2fa35fad;
        border-bottom: 2px solid #2fa35fad;
    }
</style>