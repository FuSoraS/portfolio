---
const {image, title, date, location, content } = Astro.props;
---
<div class="container-education">
    <div class="container-title">
        <div class="container-img">   
            <img src={image} alt="">
        </div>
        <h3>{title}</h3>
    </div>
    <p class="date">{date} - {location}</p>
    <p>{content}</p>
</div>
<style>
    .date {
        color: light-dark(#474747, #C0C0C0);
        margin: 5px 0 15px 0;
    }
    .container-title {
        display: flex;
        align-items: center;
    }
    .container-img {
        height: 30px;
        width: 30px;
        background-color: #D9D9D9;
        margin-right: 10px;
        border-radius: 10px;
        padding: 4px;
    }
    .container-education {
        margin-bottom: 20px;
    }
    h3 {
        font-size: 24px;
        font-weight: bold;
    }
</style>